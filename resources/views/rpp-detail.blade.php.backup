    </main>

    <script>
        // Sidebar Toggle
        document.getElementById('openSidebar')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.remove('-translate-x-full');
        });

        document.getElementById('closeSidebar')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.add('-translate-x-full');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const openBtn = document.getElementById('openSidebar');
            if (window.innerWidth < 1024 && !sidebar.contains(event.target) && event.target !== openBtn) {
                sidebar.classList.add('-translate-x-full');
            }
        });

        function copyToClipboard() {
            const content = document.getElementById('rppContent');
            const textContent = content.innerText;
            
            navigator.clipboard.writeText(textContent).then(() => {
                // Show success message
                const btn = event.target.closest('button');
                const originalHTML = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check"></i> Tersalin!';
                btn.style.backgroundColor = '#10b981';
                
                setTimeout(() => {
                    btn.innerHTML = originalHTML;
                    btn.style.backgroundColor = '#6366f1';
                }, 2000);
            }).catch(err => {
                alert('Gagal menyalin teks: ' + err);
            });
        }

        function shareRPP() {
            const shareData = {
                title: 'RPP - {{ $rpp->konsentrasiKeahlian->nama_konsentrasi ?? "RPP" }}',
                text: 'Lihat RPP yang telah saya buat untuk {{ $rpp->konsentrasiKeahlian->nama_konsentrasi ?? "pembelajaran" }}',
                url: window.location.href
            };

            if (navigator.share) {
                navigator.share(shareData).catch(err => console.log('Error sharing:', err));
            } else {
                // Fallback: copy URL
                navigator.clipboard.writeText(window.location.href).then(() => {
                    alert('Link RPP berhasil disalin ke clipboard!');
                });
            }
        }

        function downloadPDF() {
            const element = document.getElementById('rppContent');
            const opt = {
                margin: [15, 15, 15, 15],
                filename: 'RPP_{{ Str::slug($rpp->konsentrasiKeahlian->nama_konsentrasi ?? "document") }}_{{ date("Y-m-d") }}.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { 
                    scale: 2,
                    useCORS: true,
                    logging: false,
                    letterRendering: true
                },
                jsPDF: { 
                    unit: 'mm', 
                    format: 'a4', 
                    orientation: 'portrait',
                    compress: true
                },
                pagebreak: { 
                    mode: ['avoid-all', 'css', 'legacy'],
                    before: '.page-break-before',
                    after: '.page-break-after',
                    avoid: ['h2', 'h3', '.badge']
                }
            };

            html2pdf().set(opt).from(element).save();
        }

        function deleteRpp() {
            if (!confirm('Apakah Anda yakin ingin menghapus RPP ini? Tindakan ini tidak dapat dibatalkan.')) {
                return;
            }

            fetch('/api/rpp/{{ $rpp->id_rpp }}', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').content
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('RPP berhasil dihapus');
                    window.location.href = '{{ route("rpp.index") }}';
                } else {
                    alert('Gagal menghapus RPP: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Terjadi kesalahan saat menghapus RPP');
            });
        }
    </script>
</body>
</html>
